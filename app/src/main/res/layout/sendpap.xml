<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editSendTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="궁금한 제목을 쓰세요" />

    <EditText
        android:id="@+id/editSendContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="궁금한 것을 적으세요" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전송인원"/>

    <CheckBox
        android:id="@+id/checkSendProgram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로그래밍"/>

    <CheckBox
        android:id="@+id/checkSendPcm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평촌경영고등학교"/>
    <RadioGroup
        android:id="@+id/radioSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="3명" />

        <RadioButton
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="5명" />

        <RadioButton
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="7명" />

    </RadioGroup>


    <Button
        android:id="@+id/btnSendPaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="전송" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:id="@+id/q_goback"
        android:text="뒤로가기"/>

</LinearLayout>